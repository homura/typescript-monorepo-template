{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "./packages",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@foo/*": ["@foo/*/src"]
    }
  },
  "references": [
    {
      "path": "packages/app"
    },
    {
      "path": "packages/lib-a"
    }
  ]
}
